<Window x:Class="TetrisGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisGUI" 
        xmlns:views="clr-namespace:TetrisGUI.View"
        xmlns:vms="clr-namespace:TetrisGUI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:MainMenuVM}">
                <views:MainMenu/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:GameVM}">
                <views:Game/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ScoreboardVM}">
                <views:Scoreboard/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:SettingsVM}">
                <views:Settings/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
